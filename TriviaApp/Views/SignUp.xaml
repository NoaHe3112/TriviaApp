<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaApp.Views.SignUp" Title="Sign Up">
    <ContentPage.Content >
        <StackLayout>
            <Label Text="Please enter your email:"></Label>
            <Entry x:Name="mail" BindingContext="{Binding Email}"/>
            <Label Text="Please enter a nickname"/>
            <Entry x:Name="nickname" BindingContext="{Binding NickName}"/>
            <Label Text="Please enter a password:"/>
            <Entry x:Name="pass" BindingContext="{Binding Password}" IsPassword="True"/>
            <Label Text="{Binding Label}"></Label>
            <Button Text="Sign Up" Command="{Binding Register}"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>